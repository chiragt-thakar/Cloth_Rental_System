            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>        @Html.ValidationMessageFor(m => m.User_Email)

                @Html.TextBoxFor(m => m.User_Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>        @Html.ValidationMessageFor(m => m.User_Password)

                @Html.TextBoxFor(m => m.User_Password, new { @class = "form-control" })

            </div>  <div class="form-group">
                <label for="exampleInputEmail1">User Role</label>        @Html.ValidationMessageFor(m => m.User_Type)

