@model Cloth_Rental_System.Models.Category_Model

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section Content_Header{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Category</h3>
    </div>
    <div>

    </div>

    @using (Html.BeginForm("Category", "Home", FormMethod.Post,new { @id = "Create_Category_Form" }))
    {
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Category Name</label>        @Html.ValidationMessageFor(m => m.catName)

                @Html.TextBoxFor(m => m.catName, new { @class = "form-control", placeholder = "Enter Name" })
            </div>
            
            <div class="form-group">
                <label for="exampleInputEmail1">Select Gender</label>   
                <br />

               <span style="font-size:24px">Male:</span> @Html.RadioButtonFor(m => m.gender, "Male", new { @style= "height:21px;width:21px" })
            <span style="font-size:24px;margin-left:7px">Female:</span> @Html.RadioButtonFor(m => m.gender, "Female", new { @style = "height:21px;width:21px" })
            <span style="font-size: 24px; margin-left: 7px">All:</span> @Html.RadioButtonFor(m => m.gender, "All", new { @style = "height:21px;width:21px" })
            </div>
            
            @*<div class="form-group">
                    <label for="exampleInputFile">File input</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text">Upload</span>
                        </div>
                    </div>
                </div>*@

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="Manage_Category" class="Button btn btn-outline-secondary mx-5">Back to Category List</a>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('form[id="Create_Category_Form"]').validate({

            rules: {
               
                catName: 'required'
            },

            messages: {
                catName: 'Category is field is required',
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });
</script>
@section script{
}